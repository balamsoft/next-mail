{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON schema for next-mail emails (v0.0.1)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "Indicates what parser version should be used to read and process this email.",
      "type": "string",
      "default": "0.0.1"
    },
    "type": {
      "description": "For emails it should always be 'email'. Added to avoid mistaking replies with emails and viceversa.",
      "type": "string",
      "enum": ["email"]
    },
    "from": {
      "description": "The email address of the sender.",
      "type": "string"
    },
    "sender-fingerprint": {
      "description": "A string generated by means of hashing a random string using the sender's secret code. A digital signature that authenticates this email.",
      "type": "string"
    },
    "to": {
      "description": "A set of email addresses, at least one is required.",
      "type": "array",
      "items": [{
        "type": "string",
        "minItems": 1
      }],
      "default": []
    },
    "cc": {
      "description": "A set of email addresses, each one will receive a carbon copy of the email.",
      "type": "array",
      "items": [{
        "type": "string",
        "minItems": 0
      }],
      "default": []
    },
    "bcc": {
      "description": "A set of email addresses, each one will get a hidden copy of the email.",
      "type": "array",
      "items": [{
        "type": "string",
        "minItems": 0
      }],
      "default": []
    },
    "sent-time": {
      "description": "Timestamp in ISO 8601, always at UTC timezone.",
      "type": "string"
    },
    "subject": {
      "type": "string",
      "maxLength": 100,
      "minLength": 0
    },
    "body": {
      "description": "The body of the email, may or may not contain next-mail markup annotations. HTML, CSS and JS code are not allowed.",
      "type": "string",
      "maxLength": 4000000,
      "minLength": 0
    },
    "signature": {
      "type": "object",
      "properties": {
        "full-name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 88
        },
        "company-name": {
          "type": "string",
          "maxLength": 88
        },
        "address-line-1": {
          "type": "string",
          "maxLength": 88
        },
        "address-line-2": {
          "type": "string",
          "maxLength": 88
        },
        "city": {
          "type": "string",
          "maxLength": 50
        },
        "state": {
          "type": "string",
          "maxLength": 50
        },
        "zip-code": {
          "type": "string",
          "maxLength": 20
        },
        "company-url": {
          "type": "string",
          "maxLength": 150
        },
        "phone-numbers": {
          "type": "object",
          "properties": {
            "number": {
              "type": "string",
              "minLength": 5
            },
            "type": {
              "type": "string",
              "enum": ["MOBILE", "WORK_MOBILE", "PERSONAL", "HOME",
                "WORK_FAX", "HOME_FAX", "OTHER", "CAR"],
              "default": "WORK"
            },
            "country-code": {
              "type": "number",
              "default": 1
            }
          },
          "required": ["number", "type", "country-code"]
        },
        "attachments": {
          "type": "array",
          "properties": {
            "file-name": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "mime-type": {
              "type": "string",
              "minLength": 3,
              "maxLength": 50
            },
            "data": {
              "type": "string",
              "minLength": 1,
              "maxLength": 4000000
            }
          },
          "required": ["file-name", "mime-type", ""]
        },
        "appointment": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "date": {
              "type": "string",
              "description": "yyyy-MM-dd"
            },
            "start-time": {
              "type": "string",
              "description": "HH:mm"
            },
            "end-time": {
              "type": "string",
              "description": "HH:mm"
            },
            "all-day": {
              "type": "boolean",
              "default": false
            },
            "timezone": {
              "type": "number",
              "description": "GMT+/-{number}, i.e. when number is -6 it will become 'GMT-6'. Default: 0 (UTC).",
              "default": 0
            },
            "reminders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number",
                    "default": -15
                  },
                  "type": {
                    "type": "string",
                    "enum": ["MINUTES", "HOURS", "DAYS"],
                    "default": "MINUTES"
                  }
                },
                "required": ["amount", "type"]
              },
              "minLength": 0
            },
            "guests": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 5
              }
            },
            "phone-numbers": {
              "type": "object",
              "properties": {
                "number": {
                  "type": "string",
                  "minLength": 5
                },
                "type": {
                  "type": "string",
                  "enum": ["MOBILE", "WORK_MOBILE", "PERSONAL", "HOME",
                    "WORK_FAX", "HOME_FAX", "OTHER", "CAR"],
                  "default": "WORK"
                },
                "country-code": {
                  "type": "number",
                  "default": 1
                }
              },
              "required": ["number", "type", "country-code"]
            },
            "meeting-url": {
              "type": "string",
              "minLength": 5,
              "maxLength": 200
            },
            "location": {
              "properties": {
                "address-line-1": {
                  "type": "string",
                  "maxLength": 88
                },
                "address-line-2": {
                  "type": "string",
                  "maxLength": 88
                },
                "city": {
                  "type": "string",
                  "maxLength": 50
                },
                "state": {
                  "type": "string",
                  "maxLength": 50
                },
                "zip-code": {
                  "type": "string",
                  "maxLength": 20
                },
                "company-url": {
                  "type": "string",
                  "maxLength": 150
                },
                "guests": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 5
                  },
                  "minLength": 0
                },
                "meeting-room": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 30
                },
                "gps-coordinates": {
                  "type": "object",
                  "properties": {
                    "latitude": {
                      "type": "string",
                      "minLength": 4
                    },
                    "longitude": {
                      "type": "string",
                      "minLength": 4
                    }
                  },
                  "required": ["latitude", "longitude"]
                }
              },
              "required": ["address-line-1"]
            }
          },
          "required": ["title", "date", "all-day", "timezone"]
        }
      },
      "required": [
        "full-name"
      ]
    }
  },
  "required": [
    "version", "type", "from", "to", "subject", "body"
  ]
}
