{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON schema for next-mail replies (v0.0.1)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "Indicates what parser version should be used to read and process this email.",
      "type": "string",
      "default": "0.0.1"
    },
    "type": {
      "description": "For replies it should always be 'reply'. Added to avoid mistaking replies with emails and viceversa.",
      "type": "string",
      "enum": ["reply"]
    },
    "encrypted": {
      "type": "boolean",
      "default": false,
      "description": "When true some of the email's contents (body, signature, attachments, among many other) must be encrypted using the receiver's public key. Must be true when replying to an encrypted email. Default: false."
    },
    "from": {
      "description": "The email address of the sender.",
      "type": "string"
    },
    "sender-fingerprint": {
      "description": "A string generated by means of hashing a random string using the sender's secret code. A digital signature that authenticates this email.",
      "type": "string"
    },
    "original-message-id": {
      "type": "string",
      "minLength": 30
    },
    "sent-time": {
      "description": "Timestamp in ISO 8601, always at UTC timezone.",
      "type": "string"
    },
    "body": {
      "description": "The body of the email, may or may not contain next-mail markup annotations. HTML, CSS and JS code are not allowed.",
      "type": "string",
      "maxLength": 4000000,
      "minLength": 0
    },
    "signature": {
      "type": "object",
      "properties": {
        "full-name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 88
        },
        "company-name": {
          "type": "string",
          "maxLength": 88
        },
        "address-line-1": {
          "type": "string",
          "maxLength": 88
        },
        "address-line-2": {
          "type": "string",
          "maxLength": 88
        },
        "city": {
          "type": "string",
          "maxLength": 50
        },
        "state": {
          "type": "string",
          "maxLength": 50
        },
        "zip-code": {
          "type": "string",
          "maxLength": 20
        },
        "company-url": {
          "type": "string",
          "maxLength": 150
        },
        "phone-numbers": {
          "type": "object",
          "properties": {
            "number": {
              "type": "string",
              "minLength": 5
            },
            "type": {
              "type": "string",
              "enum": ["MOBILE", "WORK_MOBILE", "PERSONAL", "HOME",
                "WORK_FAX", "HOME_FAX", "OTHER", "CAR"],
              "default": "WORK"
            },
            "country-code": {
              "type": "number",
              "default": 1
            }
          },
          "required": ["number", "type", "country-code"]
        }
      },
      "required": [
        "full-name"
      ]
    },
    "attachments": {
      "type": "array",
      "properties": {
        "file-name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "mime-type": {
          "type": "string",
          "minLength": 3,
          "maxLength": 50
        },
        "data": {
          "type": "string",
          "minLength": 1,
          "maxLength": 4000000
        }
      },
      "required": ["file-name", "mime-type", "data"]
    }
  },
  "required": [
    "version", "type", "from", "original-message-id", "subject", "body"
  ]
}
